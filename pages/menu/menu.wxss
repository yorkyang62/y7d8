/**index.wxss**/
#container{
  padding: 0;
  height: 100%;
  overflow: hidden;
}

#banner{
  height: 200rpx;
  position: fixed;
}

.container_l{
  padding: 0 0 90rpx 0;
  width: 186rpx;
  height: 100%;
  background-color: #fff;
  float: left;
  overflow-y: scroll;
  box-sizing: border-box;
}

.container_l view{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.container_l view.on{
  background-color: #f6f6f6;
}

.container_r{
  padding: 0 20rpx 90rpx 20rpx;
  width: 564rpx;
  height: 100%;
  float: left;
  overflow-y: scroll;
  box-sizing: border-box;
}

.dishItem{
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 12rpx;
}

.dishItem image{
  margin-right: 20rpx;
  float: left;
  display: block;
}

.dishItem navigator{
  font-size: 28rpx;
}

.dishItem .dishPrice{
  margin-top: 40rpx;
  font-size: 30rpx;
  color: #ec771a;
}

.btn_want{
  margin-top: 55rpx;
  width: 130rpx;
  height: 46rpx;
  line-height: 46rpx;
  border: 1px solid #ededed;
  border-radius: 23rpx;
  float: right;
  font-size: 24rpx;
  background: -webkit-linear-gradient(#fff, #f0f0f0); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#fff, #f0f0f0); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#fff, #f0f0f0); /* Firefox 3.6 - 15 */
  background: linear-gradient(#fff, #f0f0f0); /* 标准的语法（必须放在最后） */
  text-align: center;
  color: #ec771a;
}

.want_able{
  color: #969696;
}

#menu_action{
  padding: 10rpx 20rpx;
  width: 100%;
  height: 90rpx;
  line-height: 70rpx;
  position: fixed;
  z-index: 2;
  bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  border-top: 1px solid #f0f0f0;
}

.total_num{
  font-size: 32rpx;
  display: inline-block;
}

.total_num text{
  color: #ec771a;
}

.btn_confirm{
  margin-left: 20rpx;
  padding: 0 30rpx;
  height: 100%;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #ec771a;
  color: #fff;
  text-align: center;
  display: inline-block;
  vertical-align: top;
}

.btn_order{
  width: 50rpx;
  line-height: 28rpx;
}

.btn_order image{
  width: 50rpx;
  height: 36rpx;
}

.likeList{
  padding: 60rpx 80rpx;
  width: 100%;
  line-height: 50rpx;
  box-sizing: border-box;
  border-top: 1px solid #f6f6f6;
  background-color: #fff;
  position: fixed;
  z-index: 2;
  bottom: 90rpx;
  font-size: 28rpx;
}

.likeListCont{
  max-height: 500rpx;
  overflow-y: scroll;
  position: relative;
}

.btn_close{
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.shadow{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1;
  background-color: #000;
  opacity: 0.2;
}